<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    android:orientation="vertical"
    tools:context=".About_us">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="#3240dd"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="15dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:hint="About Us"
            android:textStyle="bold"
            android:textColorHint="#ffffff"
            android:textSize="24sp"
            />
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/ic_nhb"
            android:outlineAmbientShadowColor="#3240dd"
            android:outlineSpotShadowColor="#3240dd"
            android:elevation="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nandha Hall Booking"
            android:gravity="center"
            android:layout_marginTop="-25dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         A dedicated application to help our satffs and faculty members to save their time by booking halls for the events, meetings, conferences through mobile itself."
            android:textStyle="normal"
            android:gravity="fill"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Principle!"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         Be An Engineer, Never Compromise Yourself For Anything!"
            android:textStyle="italic"
            android:gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:textSize="19sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who We Are?"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         We are Computer Science and Engineering students of Nandha Engineering College honouring our Nandha Educational Institution by presenting this app. We tried to see what everybody has seen and to think what nobody else has thought. And we are.."
            android:textStyle="normal"
            android:gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="25dp"
    android:background="#ffffff"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:elevation="15dp"
    app:cardElevation="10dp"
    android:outlineAmbientShadowColor="#000000"
    android:outlineSpotShadowColor="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIVAPPRIYAN N"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SRIVATHSUN MA"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBASH CHANDHRA BOSE M"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VINETH NIREJ V"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Credits"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         Thank you Dr.J.Senthil Director of Nandha Tech Campus and Mr.K.Gunasekar HoD CSE Department for giving this opportunity."
            android:textStyle="normal"
            android:gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         Special thanks to Mr.V.Manimaran Assistant Professor CSE Department for uniting us and guiding us."
            android:textStyle="normal"
            android:gravity="fill_horizontal"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="#000"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>