<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nandha.hallbooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Nandha Hall Booking"
        android:noHistory="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.nandha.hallbooking.Navigation" />
        <activity android:name="com.nandha.hallbooking.Request" />
        <activity android:name="com.nandha.hallbooking.Bookings" />
        <activity android:name="com.nandha.hallbooking.Approvals" />
        <activity android:name="com.nandha.hallbooking.Recycler" />
        <activity android:name="com.nandha.hallbooking.BookingForm" />
        <activity android:name="com.nandha.hallbooking.HallSelecting" />
        <activity android:name="com.nandha.hallbooking.Login" />
        <activity android:name="com.nandha.hallbooking.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>